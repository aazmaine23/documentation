{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "Linden Blog",
  "description": "A blog documentation site powered by Linden Starter Kit",
  "colors": {
    "primary": "#F50057",
    "light": "#FFE4E6",
    "dark": "#B0004A"
  },
  "logo": {
    "light": "/assets/hero-light.png",
    "dark": "/assets/hero-dark.png",
    "href": "https://robigoras.mintlify.app"
  },
  "favicon": {
    "light": "/assets/light.png",
    "dark": "/assets/dark.png"
  },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "fonts": {
    "family": "Lexend",
    "weight": 500,
    "format": "woff2"
  },
  "styling": {
    "customCss": "@import url('https://fonts.googleapis.com/css2?family=Hind+Siliguri:wght@400;700&display=swap'); :lang(bn) { font-family: 'Hind Siliguri', sans-serif !important; }"
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Blog",
        "icon": "book",
        "description": "Explore our blog posts",
        "groups": [
          {
            "group": "Posts",
            "pages": [
              "docs",
              "/pages/make-it-yours",
              "/pages/next-steps",
              "/pages/at-the-crossroads",
              "/pages/new-adventures"
            ]
          }
        ]
      },
      {
        "dropdown": "Changelog",
        "icon": "tree",
        "description": "Updates to the blog",
        "pages": [
          "/pages/changelog"
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Read Now",
      "href": "https://robigoras.mintlify.app/docs"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/lindenblog"
    }
  }
}