{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "Linden Blog",
  "description": "A blog documentation site powered by Linden Starter Kit",
  "colors": {
    "primary": "#FF4081",
    "light": "#FFD1E0",
    "dark": "#B0004A"
  },
  "logo": {
    "light": "/assets/hero-light.png",
    "dark": "/assets/hero-dark.png",
    "href": "https://robigoras.mintlify.app"
  },
  "favicon": {
    "light": "/assets/light.png",
    "dark": "/assets/dark.png"
  },
  "appearance": {
    "default": "system",
    "strict": false
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Blog",
        "icon": "book",
        "description": "Explore our blog posts",
        "groups": [
          {
            "group": "Posts",
            "pages": [
              "setting-up",
              "make-it-yours",
              "next-steps"
            ]
          }
        ]
      },
      {
        "dropdown": "Changelog",
        "icon": "tree",
        "description": "Updates to the blog",
        "pages": [
          "changelog"
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Read Now",
      "href": "https://robigoras.mintlify.app/setting-up"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/lindenblog"
    }
  }
}